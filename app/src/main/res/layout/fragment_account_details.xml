<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jacobkoger.newdota2applicationwsidebar.AccountDetailsFragment">

    <ImageView
        android:id="@+id/avatarDetailsPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp" />

    <TextView
        android:id="@+id/accountNameDetailsPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/avatarDetailsPage"
        android:layout_toEndOf="@+id/avatarDetailsPage"
        android:padding="3dp"
        android:text="" />

    <TextView
        android:id="@+id/realNameDetailsPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/avatarDetailsPage"
        android:layout_toEndOf="@+id/accountNameDetailsPage"
        android:padding="3dp"
        android:text="" />

    <TextView
        android:id="@+id/userIdDetailsPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/avatarDetailsPage"
        android:layout_toEndOf="@+id/avatarDetailsPage"
        android:padding="3dp"
        android:text="" />

    <TextView
        android:id="@+id/dota2hoursDetailsPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/accountNameDetailsPage"
        android:layout_below="@+id/userIdDetailsPage"
        android:padding="3dp"
        android:text="" />

    <TextView
        android:id="@+id/dota2HoursBiweeklyDetailsPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/accountNameDetailsPage"
        android:layout_below="@id/dota2hoursDetailsPage"
        android:padding="3dp"
        android:text="" />

</RelativeLayout>
