<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/radiantHeroImages"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_below="@+id/openRadiantTeamDetails"
    android:layout_marginStart="16dp"
    android:layout_marginTop="18dp"
    android:layout_marginEnd="6dp">

<ImageView
        android:id="@+id/radiantHeroImageView1"
    android:layout_width="128px"
    android:layout_height="72px"
        android:layout_marginBottom="14dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/blankhero" />

    <ImageView
        android:id="@+id/radiantHeroImageView2"
        android:layout_width="128px"
        android:layout_height="72px"
        android:layout_below="@+id/radiantHeroImageView1"
        android:layout_marginBottom="14dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/blankhero" />

    <ImageView
        android:id="@+id/radiantHeroImageView3"
        android:layout_width="128px"
        android:layout_height="72px"
        android:layout_below="@+id/radiantHeroImageView2"
        android:layout_marginBottom="14dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/blankhero" />

    <ImageView
        android:id="@+id/radiantHeroImageView4"
        android:layout_width="128px"
        android:layout_height="72px"
        android:layout_below="@+id/radiantHeroImageView3"
        android:layout_marginBottom="14dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/blankhero" />

    <ImageView
        android:id="@+id/radiantHeroImageView5"
        android:layout_width="128px"
        android:layout_height="72px"
        android:layout_below="@+id/radiantHeroImageView4"
        android:layout_marginBottom="14dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/blankhero" />
</RelativeLayout>