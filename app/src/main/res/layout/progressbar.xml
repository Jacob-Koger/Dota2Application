<?xml version="1.0" encoding="utf-8"?>
<FrameLayout     xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"  android:layout_height="48dp"
    android:layout_marginBottom="36dp">

<com.example.jacobkoger.newdota2applicationwsidebar.MatchProgressView
    android:id="@+id/whatever"
    android:layout_width="match_parent"
    android:layout_marginBottom="36dp"
    android:layout_height="48dp">

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBarKills"
        android:indeterminate="false"
        android:progressDrawable="@drawable/progressbar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/direKillsTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Kills"
        android:id="@+id/progressBarLabelTextView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Radiant:"
        android:id="@+id/radiantKillsTextView"
        android:layout_above="@+id/progressBarKills"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Dire:"
        android:id="@+id/direKillsTextView"
        android:layout_above="@+id/progressBarKills"
        android:layout_alignParentEnd="true" />

</com.example.jacobkoger.newdota2applicationwsidebar.MatchProgressView>

</FrameLayout>