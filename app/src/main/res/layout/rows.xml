<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/cardView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:padding="16dp">
            <TextView
                android:id="@+id/startTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:text="Start Time(Unix): "
                android:textSize="14sp" />
            <TextView
                android:id="@+id/matchid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/startTime"
                android:text="MatchID "
                android:textSize="14sp" />
            <TextView
                android:id="@+id/lobbyType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/matchid"
                android:text="Lobby Type: "
                android:textSize="14sp" />
            <TextView
                android:id="@+id/radiantTeamId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/lobbyType"
                android:text="Radiant Team ID: "
                android:textSize="14sp" />
            <TextView
                android:id="@+id/direTeamId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/radiantTeamId"
                android:text="Dire Team ID:"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/matchSeqNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/direTeamId"
                android:text="Match Seq. Num.: "
                android:textSize="14sp" />
        </RelativeLayout>
        <com.example.jacobkoger.dota2application.RecentMatches.HeroIconContainer
            android:id="@+id/adapter_match_history_icon_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:columnCount="5"
            android:rowCount="2" />
    </LinearLayout>
</android.support.v7.widget.CardView>