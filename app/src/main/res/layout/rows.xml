<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    app:cardCornerRadius="@dimen/activity_vertical_margin"
    app:cardElevation="@dimen/activity_vertical_margin"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="303dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_gravity="right|center_vertical">

        <TextView
            android:id="@+id/matchID_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="MatchID: "
            android:textSize="14sp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:id="@+id/startTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Time(Unix): "
            android:textSize="14sp"
            android:layout_below="@+id/matchID_view"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/lobbyType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lobby Type: "
            android:textSize="14sp"
            android:layout_below="@+id/startTime"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:id="@+id/radiantTeamId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Radiant Team ID: "
            android:textSize="14sp"
            android:layout_below="@+id/lobbyType"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:id="@+id/direTeamId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dire Team ID:"
            android:textSize="14sp"
            android:layout_below="@+id/radiantTeamId"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/playerCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player Count: "
            android:textSize="14sp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/direTeamId"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/matchSeqNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Match Seq. Num.: "
            android:textSize="14sp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/playerCount" />



    </RelativeLayout>

    <ImageView
        android:layout_width="94dp"
        android:layout_height="47dp"
        android:id="@+id/imageViewBottle"
        android:layout_gravity="left|center_vertical" />

</FrameLayout>
</android.support.v7.widget.CardView>
